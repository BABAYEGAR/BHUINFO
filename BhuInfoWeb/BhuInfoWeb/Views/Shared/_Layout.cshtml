                {
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <span class="glyphicon glyphicon-user"></span>
                                <strong>@loggedinuser.Firstname</strong>
                                <span class="glyphicon glyphicon-chevron-down"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <div class="navbar-login">
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <p class="text-center">
                                                    @if (loggedinuser.AppUserImage == null)
                                                    {
                                                        <span class="glyphicon glyphicon-user icon-size"></span>
                                                    }
                                                    else
                                                    {
                                                        <span class="icon-size"><img src="../../UploadedFiles/ProfileImage/@loggedinuser.AppUserImage"/></span>
                                                    }
                                                </p>
                                            </div>
                                            <div class="col-md-12 col-lg-12">


                                                <p class="text-left">
                                                    <strong>@loggedinuser.DisplayName</strong>
                                                </p>
                                                <p class="text-left small">@loggedinuser.Email</p>
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        @if (loggedinuser.Role == UserType.Administrator.ToString())
                                                        {
                                                            <p>
                                                                <a href="@Url.Action("Index", "AppUsers")" class="btn btn-primary btn-block  "><span class="fa fa-home"></span> Dashboard</a>
                                                            </p>
                                                            <div class="clearfix"></div>
                                                        }
                                                        else if (loggedinuser.Role == UserType.Manager.ToString())
                                                        {
                                                            <p>
                                                                <a href="@Url.Action("Index", "News")" class="btn btn-primary btn-block "><span class="fa fa-home"></span> Dashboard</a>
                                                            </p>
                                                            <div class="clearfix"></div>
                                                        }
                                                        else if (loggedinuser.Role == UserType.Student.ToString())
                                                        {
                                                        }
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <p >
                                                            <a href="@Url.Action("ProfileDetails", "Account", new {Id = new Md5Ecryption().EncryptPrimaryKey(loggedinuser.AppUserId.ToString(), true)})" class="btn btn-success btn-block "><span class="fa fa-cog"></span>Profile</a>
                                                        </p>
                                                        <div class="clearfix"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </li>


                                <li class="navbar-login-session-bg">
                                    <div class="navbar-login navbar-login-session">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <p>
                                                    <a href="@Url.Action("LogOut", "Account")" class="btn btn-danger btn-block"><span class="fa fa-user"></span> Logout</a>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                }
                else
                {
                    <li>
                        <a href="@Url.Action("Login", "Account")">Log In</a>
                    </li>
                }

            </ul>
        </div>
        <div class="clearfix"></div>
    </div>

</div>
