<body>
<!-- header-section-starts -->
<div class="header">
    <div class="container">
        <div class="logo">
            <a href="@Url.Action("Index", "Home")">
                <h1>Bhu-Info</h1>
            </a>
        </div>
        <div class="pages">
            <ul>
                <li>
                    <a class="active" href="@Url.Action("Index", "Home")">News/Articles</a>
                </li>
            </ul>
        </div>
        <div class="navigation">
            <ul>
                @if (ViewBag.Title == "About")
                {
                    <li>
                        <a href="@Url.Action("About", "Home")" class="active">About Us</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Contact", "Home")">Contact Us</a>
                    </li>
                }
                else if (ViewBag.Title == "Contact")
                {
                    <li>
                        <a href="@Url.Action("About", "Home")">About Us</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Contact", "Home")" class="active">Contact Us</a>
                    </li>
                }
                else
                {
                    <li>
                        <a href="@Url.Action("About", "Home")">About Us</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Contact", "Home")">Contact Us</a>
                    </li>
                }

                @if (loggedinuser != null)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <span class="glyphicon glyphicon-user"></span>
                                <strong>@loggedinuser.Firstname</strong>
                                <span class="glyphicon glyphicon-chevron-down"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <div class="navbar-login">
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <p class="text-center">
                                                    <span class="glyphicon glyphicon-user icon-size"></span>
                                                </p>

                                                <div class="col-lg-8">
                                                    <p class="text-left">
                                                        <strong>@loggedinuser.DisplayName</strong>
                                                    </p>
                                                    <p class="text-left small">@loggedinuser.Email</p>

                                                    @if (loggedinuser.Role == UserType.Administrator.ToString())
                                                    {
                                                        <p class="text-left">
                                                            <a href="@Url.Action("Index", "AppUsers")" class="btn btn-primary">Dashboard</a>
                                                        </p>
                                                    }
                                                    else if (loggedinuser.Role == UserType.Manager.ToString())
                                                    {
                                                        <p class="text-left">
                                                            <a href="@Url.Action("Index", "News")" class="btn btn-primary">Dashboard</a>
                                                        </p>
                                                    }
                                                    else if(loggedinuser.Role == UserType.Student.ToString())
                                                    {
                                                        
                                                    }

                                                    <p class="text-left">
                                                        <a href="@Url.Action("ChangePassword", "Account")" class="btn btn-success">Change Password</a>
                                                    </p>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </li>

                                <li class="divider navbar-login-session-bg"></li>
