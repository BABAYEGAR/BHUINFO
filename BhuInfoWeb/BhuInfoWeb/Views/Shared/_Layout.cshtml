                                </div>
                            </a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a class="text-center" href="#">
                                <strong>See All Alerts</strong>
                                <i class="fa fa-angle-right"></i>
                            </a>
                        </li>
                    </ul>
                    <!-- /.dropdown-alerts -->
                </li>
                @if (ViewBag.Title == "About")
                {
                    <li>
                        <a href="@Url.Action("About", "Home")" class="active">About Us</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Contact", "Home")">Contact Us</a>
                    </li>
                }
                else if (ViewBag.Title == "Contact")
                {
                    <li>
                        <a href="@Url.Action("About", "Home")">About Us</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Contact", "Home")" class="active">Contact Us</a>
                    </li>
                }
                else
                {
                    <li>
                        <a href="@Url.Action("About", "Home")">About Us</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Contact", "Home")">Contact Us</a>
                    </li>
                }

