@using BhuInfo.Data.Factory.BusinessFactory
@using BhuInfo.Data.Objects.Entities
@using BhuInfo.Data.Service.Enums
@model List<BhuInfo.Data.Objects.Entities.Event>

@{
    ViewBag.Title = "Events";
    var eventRestriction = Model.Where(n=>n.EndDate >= DateTime.Now);
    var restriction = eventRestriction as IList<Event> ?? eventRestriction.ToList();
    var oderedEvent = restriction.OrderByDescending(n => n.StartDate);

    var loggedinuser = Session["bhuinfologgedinuser"] as AppUser;
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- header-section-starts -->
<div class="header">
    <div class="container">
        <div class="logo">
            <a href="@Url.Action("Index", "Home")">
                <h1>Bhu-Info</h1>
            </a>
        </div>
        <div class="pages">
            <ul>

                <li>
                    <a class="active" href="@Url.Action("Index", "Home")">News/Articles</a>
                </li>
            </ul>
        </div>
        <div class="navigation">
            <ul class="nav navbar-nav">
                <li>
                    <a href="@Url.Action("About", "Home")">About Us</a>
                </li>
                <li>
                    <a href="@Url.Action("Contact", "Home")">Contact Us</a>
                </li>

                @if (loggedinuser != null)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <span class="glyphicon glyphicon-user"></span>
                                <strong>@loggedinuser.Firstname</strong>
                                <span class="glyphicon glyphicon-chevron-down"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <div class="navbar-login">
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <p class="text-center">
                                                    <span class="glyphicon glyphicon-user icon-size"></span>
                                                </p>

                                                <div class="col-lg-8">
                                                    <p class="text-left">
                                                        <strong>@loggedinuser.DisplayName</strong>
                                                    </p>
                                                    <p class="text-left small">@loggedinuser.Email</p>

                                                    @if (loggedinuser.Role == UserType.Administrator.ToString())
                                                    {
                                                        <p class="text-left">
                                                            <a href="@Url.Action("Index", "AppUsers")" class="btn btn-primary">Dashboard</a>
                                                        </p>
                                                    }
                                                    else if (loggedinuser.Role == UserType.Manager.ToString())
                                                    {
                                                        <p class="text-left">
                                                            <a href="@Url.Action("Index", "News")" class="btn btn-primary">Dashboard</a>
                                                        </p>
                                                    }
                                                    <p class="text-left">
                                                        <a href="@Url.Action("ChangePassword", "Account")" class="btn btn-success">Change Password</a>
                                                    </p>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </li>

                                <li class="divider navbar-login-session-bg"></li>
                                <li class="navbar-login-session-bg">
                                    <div class="navbar-login navbar-login-session">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <p>
                                                    <a href="@Url.Action("LogOut", "Account")" class="btn btn-danger btn-block">Logout</a>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                }

                else
                {
                    <li>
                        <a href="@Url.Action("Login", "Account")">Log In</a>
                    </li>
                }
            </ul>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
<header class="@ViewBag.HeaderClass">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            @if ((loggedinuser != null) && (loggedinuser.Role.Equals(UserType.Administrator.ToString()) || loggedinuser.Role.Equals(UserType.Manager.ToString())))
            {
                <div class="col-lg-12">
                    <a href="@Url.Action("Create","Events")" class="btn btn-success">Create</a>
                </div>
            }
            else
            {
                <div class="col-lg-12">

                </div>
            }
        </div>
    </div>
</header>
<div class="container">
    <div class="header-bottom">
        <div class="type">
            <h5>Upcoming Events</h5>
        </div>
        <span class="menu"></span>
        @if (loggedinuser == null)
        {
            <div class="list-nav">
                <ul>
                    <li>
                        <a href="@Url.Action("Index", "Home")">Home</a>
                    </li>|
                    <li>
                        <a href="@Url.Action("GeneralNews", "Home")">General</a>
                    </li>|
                    <li>
                        <a href="@Url.Action("SportsNews", "Home")">Sports</a>
                    </li>|
                    <li>
                        <a href="@Url.Action("FashionNews", "Home")">Fashion</a>
                    </li>|
                    <li>
                        <a href="@Url.Action("Index", "SchoolDiscussions")">Discussions</a>
                    </li>|
                    <li>
                        <a href="@Url.Action("UpcomingEvent", "Home")" class="active">Events</a>
                    </li>|
                    <li>
                        <a href="@Url.Action("SrcTeam", "Home")">SRC Team</a>
                    </li>
                </ul>
            </div>
        }
        else
        {
            <div class="list-nav">
                <ul>
                    <li>
                        <a href="@Url.Action("Index", "AppUsers")">Users</a>
                    </li>|
                    <li>
                        <a href="@Url.Action("Index", "News")">News</a>
                    </li>|
                    <li>
                        <a href="@Url.Action("Index", "NewsCategories")">News Category</a>
                    </li>|
                    <li>
                        <a href="@Url.Action("Index", "Events")">Events</a>
                    </li>|
                    <li>
                        <a href="@Url.Action("Index", "SchoolDiscussions")">Discussions</a>
                    </li>
                </ul>
            </div>
        }
        <!-- script for menu -->
        <script>
            $("span.menu")
                .click(function() {
                    $(".list-nav")
                        .slideToggle("slow",
                            function() {
                                // Animation complete.
                            });
                });
        </script>
        <!-- script for menu -->
        <div class="clearfix"></div>
    </div>
</div>
<div class="container">
    <div class="content">

        <div class="col-md-12 content-right content-right-top">
            <div class="editors-pic-grids">

                <h5 class="head" style="color:#1ac7c3">Upcoming Events</h5>
                @foreach (var item in oderedEvent)
                {
                    <div class="editor text-center">

                        <h2 style="color: rgb(100, 231, 224);font-family: fantasy font-weight: bolder;">@item.EventName</h2>
                        <label style="color: black">Venue: @item.Venue </label><br/>
                        <label style="color: black">Start Date: @item.StartDate.ToShortDateString()</label><br/>
                        <label style="color: black">End Date: @item.EndDate.ToShortDateString() </label><br/>

                        <span></span>

                    </div>
                }

                <div class="clearfix"></div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>