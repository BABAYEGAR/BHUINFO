<style>
    ul > li {
        /*display: none;*/
        list-style-type: none;
    }
    ul#lazy-container {
    height: 800px;
    overflow: auto;

}
    ::-webkit-scrollbar {
    width: 12px;
}
 
::-webkit-scrollbar-track {
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3); 
