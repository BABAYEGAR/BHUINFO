    <p class="ptext">
        @(new RemoveCharacters().RemoveSpecialCharacters(Model.Content))
    </p>
    <label id="likeOrDislikeDiv">
        @{
            @Html.Partial("_LikeOrDislikePartial", Model)
        }
    </label><br/>
