@using BhuInfo.Data.Objects.Entities
@model BhuInfo.Data.Objects.Entities.Advertisement
@{
    ViewBag.Title = "Edit";
}
@{
    Layout = "~/Views/Shared/_LayoutViewDetails.cshtml";
}
@section css{
    <link href="~/Scripts/plugins/Form/css/select2.css" rel="stylesheet"/>
}
@{
    ViewBag.HeaderClass = "page-header";
    var loggedinuser = Session["bhuinfologgedinuser"] as AppUser;
}
<div class="container">
    <div class="header-bottom">
        <div class="type">
            <h5>User Management</h5>
        </div>
        <span class="menu"></span>
        <div class="list-nav">
            <ul>
                <li>
                    <a href="@Url.Action("Index", "AppUsers")">Users</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "News")">News</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "NewsCategories")">News Category</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Events")">Events</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "SchoolDiscussions")">Discussions</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Advertisements")" class="active">Advertisment</a>
                </li>
            </ul>
        </div>
        <!-- script for menu -->
        <script>
            $("span.menu")
                .click(function() {
                    $(".list-nav")
                        .slideToggle("slow",
                            function() {
                                // Animation complete.
                            });
                });
        </script>
        <!-- script for menu -->

        <div class="clearfix"></div>
    </div>
</div>
@using (Html.BeginForm("Edit", "Advertisements", FormMethod.Post, new {enctype = "multipart/form-data", @class = "form"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    @Html.Hidden("Id", Model.AdvertisementId)
    <div class="container">
        <div class="row">
            <div class="panel panel-flat">

                <div class="panel-body">
                    <div class="col-md-12">
                        <div class="form-horizontal">
                            <div class="form-group col-md-12">
                                @Html.LabelFor(model => model.AdvertCompanyName, new {@class = "control-label col-md-3"})
                                <div class="col-sm-6 col-md-9">
                                    @Html.TextBoxFor(model => model.AdvertCompanyName, new {@class = "form-control", placeholder = "Enter your company name"})
                                    @Html.ValidationMessageFor(model => model.AdvertCompanyName, "", new {@class = "text-danger"})
                                </div>

                            </div>

                            <div class="clearfix"></div>
                            <div class="form-group col-md-12">
                                @Html.LabelFor(model => model.AdvertType, new {@class = "control-label col-md-3"})
                                <div class="col-sm-6 col-md-9">
                                    @Html.DropDownListFor(model => model.AdvertType, (SelectList) ViewBag.advertType, new {@class = "form-control select-dropdown"})
                                </div>

                            </div>
                            <div class="clearfix"></div>
                            <div class="form-group col-md-12">
                                @Html.LabelFor(model => model.AdvertImage, new {@class = "control-label col-md-3"})
                                <div class="col-sm-6 col-md-9">
                                    <input type="file" name="Image" id="Image" style="width: 100%;"/>
                                    @Html.ValidationMessageFor(model => model.AdvertImage, "", new {@class = "text-danger"})
                                </div>

                            </div>
                        </div>
                        <div class="col-md-12">
                            @Html.ActionLink("Back to list", "Index", null, new {@class = "pull-left btn btn-default", style = "fa fa-pencil"})
                            <input type="submit" value="Save" class="btn btn-primary pull-right "/>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}