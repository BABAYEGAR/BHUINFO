@using BhuInfo.Data.Service.Enums
@model BhuInfo.Data.Objects.Entities.AppUser

@{
    ViewBag.Title = "Change password";
}
@{
    Layout = "~/Views/Shared/_LayoutViewDetails.cshtml";
}
<div class="container">
    <div class="row">
        <div class="panel panel-flat">

            <div class="panel-body">
                <div class="col-md-12">
                    @if (TempData["password"] != null)
                    {
                        if (TempData["notificationtype"].Equals(NotificationType.Success.ToString()))
                        {
                            <p class="alert-success alert-dismissable" style="height: 30px">@TempData["password"]</p>
                        }
                        else if (TempData["notificationtype"].Equals(NotificationType.Danger.ToString()))
                        {
                            <p class="alert-danger alert-dismissable" style="height: 30px">@TempData["password"]</p>
                        }
                        else if (TempData["notificationtype"].Equals(NotificationType.Info.ToString()))
                        {
                            <p class="alert-info alert-dismissable" style="height: 30px">@TempData["password"]</p>
                        }
                    }
                    <div class="form-horizontal">
                        @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new {@class = "text-danger"})
                            <div class="form-group">
                                @Html.Label("Old Password", new {@class = "col-md-3 control-label"})
                                <div class="col-md-9">
                                    @Html.Password("OldPassword", null, new {@class = "form-control"})
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="form-group">
                                @Html.Label("New Password", new {@class = "col-md-3 control-label"})
                                <div class="col-md-9">
                                    @Html.Password("NewPassword", null, new {@class = "form-control"})
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="form-group">
                                @Html.Label("Confirm New Password", new {@class = "col-md-3 control-label"})
                                <div class="col-md-9">
                                    @Html.Password("ConfirmNewPassword", null, new {@class = "form-control"})
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" class="btn btn-sm btn-primary" value="Submit"/>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>