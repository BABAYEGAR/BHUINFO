@model BhuInfo.Data.Objects.Entities.AppUser

@{
    ViewBag.Title = "Reset password";
}
@section css{
    <link href="~/Scripts/plugins/Form/css/select2.css" rel="stylesheet"/>
}
<div class="container">
    <div class="row">
        <div class="panel panel-flat">

            <div class="panel-body">
                <div class="col-md-12">
                    <div class="form-horizontal">
                        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new {@class = "text-danger"})
                            @Html.Hidden("Id", Model.AppUserId)
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new {@class = "col-md-3 control-label"})
                                <div class="col-md-9">
                                    @Html.PasswordFor(m => m.Password, new {@class = "form-control"})
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="form-group">
                                @Html.Label("Confirm Password", new {@class = "col-md-3 control-label"})
                                <div class="col-md-9">
                                    @Html.Password("ConfirmPassword", null, new {@class = "form-control"})
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" class="btn btn-primary" value="Reset"/>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>